<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>لوحة الإدارة | Am Rewards</title>
  <link href="https://fonts.googleapis.com/css2?family=Tajawal&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Tajawal', sans-serif; background: #f4f6f9; padding: 30px; }
    .card { background: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0 0 10px #ccc; }
    h2 { color: #004AAD; }
    .hidden { display: none; }
  </style>
</head>
<body>
  <h2>📊 لوحة تحكم الإدارة</h2>
  <div id="statsContainer" class="hidden">
    <div class="card">👥 عدد المستخدمين: <strong id="userCount">...</strong></div>
    <div class="card">✅ المهام المكتملة اليوم: <strong id="tasksToday">...</strong></div>
    <div class="card">💰 الأرباح الكلية: <strong id="totalProfit">...</strong> EGP</div>
    <div class="card">💸 طلبات السحب اليوم: <strong id="withdrawalsToday">...</strong></div>
  </div>
  <div id="notAllowed" style="color:red; font-weight:bold;"></div>

  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-firestore.js"></script>
  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyBfOJPkWbmcJ6s29bDNysr-H0Kx-Js3Gy0",
      authDomain: "am--rewards.firebaseapp.com",
      projectId: "am--rewards",
      storageBucket: "am--rewards.appspot.com",
      messagingSenderId: "744783579735",
      appId: "1:744783579735:web:45e00de9998893bbc9b112"
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    firebase.auth().onAuthStateChanged(user => {
      if (user && user.email === "amirfg992005@gmail.com") {
        document.getElementById("statsContainer").classList.remove("hidden");

        db.collection("users").get().then(snapshot => {
          document.getElementById("userCount").innerText = snapshot.size;
        });

        db.collection("tasks").where("date", "==", new Date().toISOString().substring(0, 10))
          .get().then(snapshot => {
            document.getElementById("tasksToday").innerText = snapshot.size;
          });

        db.collection("withdrawals").where("date", "==", new Date().toISOString().substring(0, 10))
          .get().then(snapshot => {
            document.getElementById("withdrawalsToday").innerText = snapshot.size;
          });

        db.collection("profits").doc("total").get().then(doc => {
          document.getElementById("totalProfit").innerText = doc.exists ? doc.data().amount : "0";
        });

      } else {
        document.getElementById("notAllowed").innerText = "🚫 هذه الصفحة مخصصة للمسؤول فقط.";
        setTimeout(() => window.location.href = "index.html", 3000);
      }
    });
  </script>
</body>
</html>
