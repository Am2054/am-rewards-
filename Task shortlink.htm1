<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>مهمة الروابط المختصرة | Am Rewards</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { font-family: Arial; direction: rtl; text-align: center; padding: 20px; background-color: #f9f9f9; }
    a { display: inline-block; padding: 10px 20px; background-color: green; color: white; border-radius: 5px; text-decoration: none; margin-top: 20px; }
    p { margin-top: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <h1>مهمة الرابط المختصر</h1>
  <p>اضغط على الزر ثم ارجع لإضافة النقاط:</p>

  <a href="https://shrinke.me/AmRewardsTest" target="_blank" onclick="rewardUser()">🔗 افتح الرابط المختصر</a>

  <p id="status"></p>

  <!-- Firebase -->
  <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-firestore-compat.js"></script>
  <script src="firebase.js"></script>

  <script>
    let currentUser;

    auth.onAuthStateChanged(user => {
      if (user) {
        currentUser = user;
      } else {
        window.location.href = "index.html";
      }
    });

    function rewardUser() {
      if (!currentUser) return;

      const ref = db.collection("users").doc(currentUser.uid);
      ref.get().then(doc => {
        const currentPoints = doc.exists && doc.data().points ? doc.data().points : 0;
        const newPoints = currentPoints + 80;

        ref.set({ points: newPoints }, { merge: true }).then(() => {
          document.getElementById("status").textContent = "✅ تم إضافة 80 نقطة بنجاح!";
        }).catch(() => {
          document.getElementById("status").textContent = "❌ حدث خطأ، حاول مرة أخرى.";
        });
      });
    }
  </script>
</body>
</html>
