<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>هدية اليوم - Am Rewards</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>
</head>
<body class="bg-gray-100 px-4 py-6 text-right">

  <div class="max-w-xl mx-auto bg-white p-6 rounded-xl shadow text-center">
    <h2 class="text-xl font-bold mb-4">🎁 احصل على هديتك اليومية</h2>
    <button onclick="claimGift()" class="bg-purple-600 text-white px-4 py-2 rounded">احصل على هديتك</button>
    <p id="result" class="mt-4 font-bold text-green-600"></p>
  </div>

  <script>
    const firebaseConfig = {
      // firebaseConfig هنا
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();
    const auth = firebase.auth();

    function claimGift() {
      auth.onAuthStateChanged(async user => {
        if (user) {
          const userRef = db.collection("users").doc(user.uid);
          const doc = await userRef.get();
          const lastGift = doc.data().lastGiftDate || "";
          const today = new Date().toISOString().split("T")[0];

          if (lastGift === today) {
            document.getElementById("result").innerText = "لقد حصلت على هدية اليوم بالفعل!";
            return;
          }

          const reward = Math.floor(Math.random() * 50) + 10; // بين 10 و 60 نقطة
          await userRef.update({
            points: firebase.firestore.FieldValue.increment(reward),
            lastGiftDate: today
          });

          document.getElementById("result").innerText = `🎉 حصلت على ${reward} نقطة!`;
        }
      });
    }
  </script>
</body>
</html>
